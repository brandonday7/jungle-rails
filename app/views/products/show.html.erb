<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <br><br>

        <div class="form">
          <%= form_for :review, :url => "/products/#{@product.id}/reviews" do |f| %>
            <%= f.select :rating, (1..5) %>
            <%= f.text_area :description, size: "40x8" %>
            <%= f.submit "Submit Rating" %>
          <% end %>
        </div>


        <div class='dl-horizontal'>
          <h4>Reviews:</h4>
          <% @reviews.each do |review| %>
          <% review_username = User.find(review[:user_id])[:first_name] %>
          <dt> <%= review_username %> says <br></dt>
           Rating: <%= review.rating %>/5</dt>
           <dd> <%= review.description %></dd>
           <% end %>
        </div>
      </div>


    </div>

  </article>

</section>
